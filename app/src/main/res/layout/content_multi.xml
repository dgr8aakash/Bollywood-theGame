<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dgr8akki.bollywood.single"
    tools:showIn="@layout/activity_multi"
    android:background="@drawable/singleback">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:id="@+id/imageView"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="false"
        android:src="@drawable/b0"
        android:maxHeight="300dp"
        android:maxWidth="200dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginTop="444dp"
        android:id="@+id/linearLayout"
        android:nestedScrollingEnabled="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Letter"
            android:id="@+id/textView5"
            android:textSize="25dp"
            android:textColor="@color/orange" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_marginLeft="10dp"
            android:maxLength="1"
            android:textSize="30dp"
            android:textColor="@color/orange" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CHECK"
            android:id="@+id/button5"
            android:textColor="@color/yellow"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:onClick="introduceLetter"
            android:nestedScrollingEnabled="true"
            android:background="@color/colorPrimaryDark2" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView11"
        android:layout_marginTop="222dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ff0000"
        android:textSize="50dp"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:foregroundGravity="center"
        android:gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginTop="70dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/showwordlayout"
        android:gravity="center|center_vertical|center_horizontal"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:touchscreenBlocksFocus="false"
        android:transitionGroup="false"
        android:layout_alignParentEnd="false"
        android:nestedScrollingEnabled="true">

    </LinearLayout>


</RelativeLayout>
