<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dgr8akki.bollywood.Players"
    tools:showIn="@layout/activity_players"
    android:background="@drawable/back2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="300dp">

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Single Player"
            android:id="@+id/button2"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonback"
            android:textStyle="bold"
            android:onClick="singlePlayer" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Multiplayer"
            android:id="@+id/button3"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonback"
            android:textStyle="bold"
            android:onClick="multiPlayer" />

        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Scores"
            android:id="@+id/button4"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonback"
            android:textStyle="bold"
            android:onClick="scores" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOLLYWOOD"
        android:id="@+id/textView3"
        android:textSize="46dp"
        android:textStyle="bold|normal|italic"
        android:layout_marginLeft="60dp"
        android:textColor="@color/choco"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="- The game"
        android:id="@+id/textView4"
        android:textStyle="normal"
        android:textSize="35dp"
        android:textIsSelectable="false"
        android:textColor="@color/black"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
